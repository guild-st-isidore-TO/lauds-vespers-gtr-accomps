chantTonePrayerBasic = \relative c' {
  \set Score.timing = ##f
  \key a \major

  <cs e a>2 <cs fs a>4. \divisioMaxima
  <d fs a>2 <cs e a>4. \finalis
}

chantTonePrayerEndings = \relative c' {
  \set Score.timing = ##f
  \key a \major

  <cs e a>2 a'4 <b, d fs> <cs e a>4. \divisioMaxima
  <d fs a>2 <cs e a>4. \finalis 
}