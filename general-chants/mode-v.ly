chantToneVa = \relative c' {
  \key a \major
  \set Score.timing = ##f

  a'2 b4 fs4. \divisioMaxima
  e2 d4 fs4. \finalis 
}

chantToneVaChords = \chordmode {
  a1:m c4.
  c2. f2 d4:m
}

chantToneVc = \relative c' {
